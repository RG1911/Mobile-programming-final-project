<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Blue">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/pokelogo"
        app:layout_constraintBaseline_toTopOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-34dp">

    </ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pokemon_battle_sim"
        android:textColor="@color/yellow"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <Button
        android:id="@+id/start"
        android:onClick="startClick"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow"
        android:text="@string/play"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintRight_toRightOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title">

    </Button>

    <Button
        android:id="@+id/history"
        android:onClick="historyClick"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/Blue"
        android:text="@string/match_history"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/start"
        app:layout_constraintRight_toRightOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/start">
    </Button>

    <Button
        android:id="@+id/settings"
        android:onClick="settingsClick"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/Blue"
        android:text="@string/settings"
        android:textSize="13sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/history"
        app:layout_constraintRight_toRightOf="@id/history"
        app:layout_constraintTop_toBottomOf="@id/history">
    </Button>

    <Button
        android:id="@+id/pokedex"
        android:onClick="pokedexClick"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/Blue"
        android:text="Pokedex"
        android:textSize="13sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/settings"
        app:layout_constraintRight_toRightOf="@id/settings"
        app:layout_constraintTop_toBottomOf="@id/settings">
    </Button>

